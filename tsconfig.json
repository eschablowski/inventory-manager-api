{
  "compilerOptions": {
    "target": "ES2015",
    "module": "CommonJS",
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "build",
    "removeComments": true,
    "pretty": false,
    "allowJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": [
      "ES2019"
    ],
    "sourceMap": true,
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ],
  },
  "include": [
    "src/**/*.ts"
  ],
}